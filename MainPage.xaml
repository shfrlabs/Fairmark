<Page
    x:Class="Fairmark.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    xmlns:models="using:Fairmark.Models"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    controls:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <converters:TagGradientConverter x:Name="TagGradientConverter"/>
        <converters:ColorBrushConverter x:Name="ColorBrushConverter"/>
        <converters:ColorGradientConverter x:Name="ColorGradientConverter"/>
        <converters:NullBooleanConverter x:Name="NullBooleanConverter"/>
        <converters:CountVisibilityConverter x:Name="CountVisibilityConverter"/>
        <helpers:GridLengthAnimationHelper x:Name="Dummy"/> <!-- .net native will strip the whole thing without this here apparently -->
    </Page.Resources>
    <Grid x:Name="ContentGrid">
        <Grid.Resources>
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="Transparent"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="170"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <Image Source="Assets/StoreLogo.png" Width="15" Height="15" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBlock Text="Fairmark" FontSize="12" Margin="15,2,0,0" FontFamily="Segoe UI Variable Display"/>
            </StackPanel>
            <CommandBar x:Name="MainCommands" VerticalAlignment="Center" Grid.Column="1" Margin="5,0,-10,0" OverflowButtonVisibility="Collapsed" DefaultLabelPosition="Collapsed">
                <AppBarToggleButton Label="Files" Width="50" x:Name="Explorer" Click="Explorer_Click">
                    <AppBarToggleButton.Icon>
                        <FontIcon Glyph="&#xEC50;" />
                    </AppBarToggleButton.Icon>
                </AppBarToggleButton>
                <AppBarToggleButton Icon="Find" Label="Search" Width="50" x:Name="Search" Click="Search_Click"/>
                <AppBarButton Width="48" Loaded="Settings_Loaded" Click="Settings_Click" x:Name="Settings" Height="46" VerticalAlignment="Center" Margin="-1,0,0,0" controls:AnimatedIcon.State="Normal" PointerEntered="AppBarButton_PointerEntered" PointerExited="AppBarButton_PointerExited">
                    <AppBarButton.Icon>
                        <controls:AnimatedIcon>
                            <controls:AnimatedIcon.RenderTransform>
                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                            </controls:AnimatedIcon.RenderTransform>
                            <animatedvisuals:AnimatedSettingsVisualSource/>
                        </controls:AnimatedIcon>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>
            <controls:TabView
                MinWidth="0"
                x:Name="TabView"
                BorderThickness="0"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                SelectionChanged="TabView_SelectionChanged"
                IsAddTabButtonVisible="False"
                TabCloseRequested="TabView_TabCloseRequested"
                CanDrag="False"
                CanDragTabs="False"
                CanReorderTabs="False">
            </controls:TabView>
            <Rectangle Grid.ColumnSpan="4" x:Name="DragRegion" HorizontalAlignment="Stretch" Canvas.ZIndex="-1" Fill="Transparent"/>
        </Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid CornerRadius="4" Margin="5" Padding="5,0" Grid.Column="0" Grid.RowSpan="2" Background="{ThemeResource LayerFillColorDefaultBrush}" x:Name="SideGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <AppBarButton Icon="ClosePane" Label="Close" Click="ClosePane_Click" LabelPosition="Collapsed" Width="50"/>
                <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="235">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="NoNoteText" Visibility="Collapsed" Text="No notes here! Create one using the button below." Margin="20" Opacity=".7" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    <ListView x:Name="NoteList" ItemsSource="{x:Bind helpers:NoteCollectionHelper.notes, Mode=OneWay}" SelectionChanged="NoteList_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:NoteMetadata">
                                <Grid Background="{Binding Tags, Converter={StaticResource TagGradientConverter}, Mode=OneWay}" Margin="-12, -8, -8, -8" Padding="12, 10, 8, 10" CornerRadius="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{x:Bind helpers:NoteCollectionHelper.tags, Mode=OneWay}" x:Name="TagBox" MinWidth="100" Grid.Column="0" PlaceholderText="Filter by tag" Margin="0,0,5,0" SelectionChanged="TagBox_SelectionChanged" HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models:NoteTag">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Background="{x:Bind Color, Converter={StaticResource ColorGradientConverter}, Mode=OneWay}" Margin="-12, -6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="4" Grid.Column="0" Grid.ColumnSpan="2"/>
                                        <TextBlock Text="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button x:Name="ClearTags" Grid.Column="1" Click="ClearTags_Click" HorizontalAlignment="Stretch" Margin="0,0,5,0" VerticalAlignment="Stretch">
                            <FontIcon FontSize="14" Glyph="&#xE711;" />
                        </Button>
                        <Button x:Name="CreateTag" Grid.Column="2" AllowFocusOnInteraction="True" Click="CreateTag_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <FontIcon FontSize="14" Glyph="&#xE710;" />
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <AppBarButton Icon="Add" Width="62" AllowFocusOnInteraction="True" HorizontalAlignment="Center" Grid.Column="0" Label="Create note" LabelPosition="Collapsed" x:Name="CreateButton" Click="CreateButton_Click"/>
                        <AppBarButton Icon="Rename" Width="62" AllowFocusOnInteraction="True" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" Grid.Column="1" Label="Rename" LabelPosition="Collapsed" x:Name="RenameButton" Click="RenameButton_Click"/>
                        <AppBarButton Icon="Delete" Width="62" AllowFocusOnInteraction="True" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" Grid.Column="2" Label="Delete" LabelPosition="Collapsed" x:Name="DeleteButton" Click="DeleteButton_Click"/>
                        <AppBarButton Icon="More" Width="60" x:Name="MoreBtn" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" LabelPosition="Collapsed">
                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Change emoji" Loaded="MenuFlyoutItem_Loaded">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE899;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSubItem Text="Assign tags" Loaded="MenuFlyoutSubItem_Loaded">
                                        <MenuFlyoutSubItem.Icon>
                                            <FontIcon Glyph="&#xE8EC;" />
                                        </MenuFlyoutSubItem.Icon>
                                    </MenuFlyoutSubItem>
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="235">
                    <StackPanel>
                        <AutoSuggestBox
                            x:Name="SearchBox"
                            PlaceholderText="Search notes..."
                            QueryIcon="Find"
                            Margin="2,0,2,0"
                            Height="40"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            QuerySubmitted="SearchBox_QuerySubmitted"/>
                        <ListView
                            x:Name="SearchResults"
                            SelectionMode="None"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:NoteMetadata">
                                    <Button Tag="{Binding}" Click="SearchResult_Click" BorderThickness="0" Margin="-15,0,-10,0" Background="{Binding Tags, Converter={StaticResource TagGradientConverter}, Mode=OneWay}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="35" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="25"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon Glyph="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>
            <Frame x:Name="contentFrame" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="contentFrame_Loaded"/>
        </Grid>
    </Grid>
</Page>
