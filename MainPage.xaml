<Page
    x:Class="Fairmark.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    xmlns:models="using:Fairmark.Models"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:tlmedia="using:CommunityToolkit.WinUI.Media"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    controls:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <converters:TagGradientConverter x:Name="TagGradientConverter"/>
        <converters:ColorBrushConverter x:Name="ColorBrushConverter"/>
        <converters:ColorGradientConverter x:Name="ColorGradientConverter"/>
        <converters:NullBooleanConverter x:Name="NullBooleanConverter"/>
        <converters:CountVisibilityConverter x:Name="CountVisibilityConverter"/>
        <converters:BooleanVisibilityConverter x:Name="BooleanVisibilityConverter"/>
        <converters:GroupHeaderNameConverter x:Name="GroupHeaderNameConverter"/>
        <helpers:GridLengthAnimationHelper x:Name="Dummy"/>
        <CollectionViewSource x:Name="NotesViewSource"
                          Source="{x:Bind helpers:NoteCollectionHelper.groupedNotes}"
                          IsSourceGrouped="True"
                          ItemsPath=""/>
    </Page.Resources>
    <Grid x:Name="ContentGrid">
        <Grid.Resources>
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="Transparent"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="AcrylicCover" Grid.Row="0" Grid.Column="0" Canvas.ZIndex="-99" Grid.RowSpan="99" Grid.ColumnSpan="99" Margin="0" Visibility="Collapsed" Opacity="0">
            <Grid.Background>
                <tlmedia:BackdropBlurBrush Amount="15"/>
            </Grid.Background>
        </Grid>
        <Grid x:Name="AppTitleBar" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Margin="2,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="170"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Width="247" Margin="1,5,-1,-5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <Image Source="Assets/StoreLogo.png" Width="20" Height="20" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <AppBarButton Width="48" Grid.Column="2" CornerRadius="4" Height="44" VerticalAlignment="Center" Margin="-1,0,0,0" x:Uid="MoreButton" Click="TopMore_Click" x:Name="TopMore">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="More" Margin="0,-1,0,1"/>
                    </AppBarButton.Icon>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Icon="Setting" Click="Settings_Click" x:Name="Settings" Loaded="Settings_Loaded" x:Uid="SettingsButton"/>
                            <MenuFlyoutItem x:Name="About" Click="About_Click" x:Uid="AboutAppButton" Loaded="About_Loaded">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE946;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Icon="ContactInfo" x:Name="Contact" Click="Contact_Click" x:Uid="ContactButton" Loaded="Contact_Loaded"/>
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarButton Grid.Column="3" CornerRadius="4" Width="50" Height="44" x:Name="AIButton" IsEnabled="{Binding ais.IsAIEnabled, Mode=TwoWay}" x:Uid="AIButton" Click="TopMore_Click" Loaded="AIButton_Loaded">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="" Margin="0,-1,0,1"/>
                    </AppBarButton.Icon>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource AIButtonMenuFlyoutPresenterStyle}">
                            <MenuFlyoutItem Text="Summarize" x:Name="SummarizeAIButton" Click="SummarizeAIButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8E4;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Chat" x:Name="ChatAIButton" Click="ChatAIButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Icon="Add" Text="Create" x:Name="CreateAIButton" Click="CreateAIButton_Click"/>
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarToggleButton Grid.Column="4" CornerRadius="4" Height="44" Width="50" x:Name="Search" x:Uid="FindButton" Click="Search_Click">
                    <AppBarToggleButton.Icon>
                        <SymbolIcon Symbol="Find" Margin="0,-1,0,1"/>
                    </AppBarToggleButton.Icon>
                </AppBarToggleButton>
                <AppBarToggleButton x:Uid="FilesButton" CornerRadius="4" Height="44" Grid.Column="5" Width="50" x:Name="Explorer" Click="Explorer_Click">
                    <AppBarToggleButton.Icon>
                        <FontIcon Glyph="&#xEC50;" Margin="0,-1,0,1" />
                    </AppBarToggleButton.Icon>
                </AppBarToggleButton>
            </Grid>
            <controls:TabView
                Margin="-1,-3,0,0"
                MinWidth="0"
                x:Name="TabView"
                BorderThickness="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                SelectionChanged="TabView_SelectionChanged"
                IsAddTabButtonVisible="False"
                TabCloseRequested="TabView_TabCloseRequested"
                CanDrag="False"
                CanDragTabs="False"
                CanReorderTabs="False">
            </controls:TabView>
            <Rectangle Grid.ColumnSpan="3" x:Name="DragRegion" HorizontalAlignment="Stretch" Canvas.ZIndex="-1" Fill="Transparent"/>
        </Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid CornerRadius="4" Margin="9,5,5,9" Padding="5,0" Grid.Column="0" Grid.RowSpan="2" Background="{ThemeResource LayerFillColorDefaultBrush}" x:Name="SideGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <AppBarButton x:Uid="ClosePaneButton" Click="ClosePane_Click" LabelPosition="Collapsed" Margin="0,0,5,0" Height="40" Width="40" FontSize="10">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="ClosePane" Margin="0,-3,0,3"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="235">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" x:Name="NoNoteText" Visibility="Collapsed" x:Uid="NoNoteText" Margin="20" Opacity=".7" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    <ListView Grid.Row="1" x:Name="NoteList" ItemsSource="{Binding Source={StaticResource NotesViewSource}}" SelectionChanged="NoteList_SelectionChanged">
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True">
                                <GroupStyle.HeaderContainerStyle>
                                    <Style TargetType="ListViewHeaderItem">
                                        <Setter Property="Padding" Value="10,8,12,0" />
                                        <Setter Property="Margin" Value="0,0,0,-15"/>
                                    </Style>
                                </GroupStyle.HeaderContainerStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HeaderName, Mode=OneWay}" FontSize="12" Opacity="0.7"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:NoteMetadata">
                                <Grid Background="{Binding Tags, Converter={StaticResource TagGradientConverter}, Mode=OneWay}" Margin="-12, -7, -8, -5" Padding="12, 7, 8, 5" CornerRadius="3" Height="35">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                                    <Button Grid.Column="2" Width="25" Height="25" BorderThickness="0" Background="Transparent" Margin="0" Padding="0" x:Name="UnpinBtn" Click="UnpinBtn_Click" Visibility="{x:Bind IsPinned, Mode=OneWay, Converter={StaticResource BooleanVisibilityConverter}}" Tag="{x:Bind Id, Mode=OneWay}">
                                        <FontIcon Opacity="0.7" FontSize="14" Glyph="&#xE718;"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid Grid.Row="0" Margin="0,-50,-5,0">
                        <CommandBar HorizontalAlignment="Right">
                            <AppBarButton x:Uid="FilterBtn" FontSize="10" x:Name="Filter" Click="Filter_Click" LabelPosition="Collapsed" HorizontalAlignment="Right" Margin="0,0,5,0" Height="40" Width="40">
                                <AppBarButton.Icon>
                                    <SymbolIcon Symbol="Filter" Margin="0,-3,0,3"/>
                                </AppBarButton.Icon>
                                <FlyoutBase.AttachedFlyout>
                                    <Flyout>
                                        <Grid Margin="-10" MaxWidth="500">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <ListView AllowFocusOnInteraction="True" Grid.Row="0" BorderThickness="0" ItemsSource="{x:Bind helpers:NoteCollectionHelper.tags}" x:Name="TagBox" MinWidth="100" x:Uid="TagBox" Margin="0,0,0,5" SelectionChanged="TagBox_SelectionChanged" SelectionMode="Multiple" AllowDrop="False" CanReorderItems="False" CanDragItems="False" HorizontalAlignment="Stretch">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:NoteTag">
                                                        <Grid Margin="-12, 0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="35"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Background="{x:Bind Color, Converter={StaticResource ColorGradientConverter}, Mode=OneWay}" Margin="-28, -7, 0, -7" CornerRadius="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="2"/>
                                                            <TextBlock Text="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            <CommandBar DefaultLabelPosition="Right" Grid.Row="1" MinHeight="35" HorizontalContentAlignment="Center" HorizontalAlignment="Center">
                                                <AppBarButton LabelPosition="Default" x:Name="ClearTags" x:Uid="ClearTags" Click="ClearTags_Click" HorizontalAlignment="Stretch" Margin="0,0,5,0" VerticalAlignment="Stretch">
                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE711;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                                <AppBarButton x:Name="CreateTag" x:Uid="CreateTag" AllowFocusOnInteraction="True" Click="CreateTag_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                            </CommandBar>
                                            <CommandBar DefaultLabelPosition="Right" Grid.Row="2" MinHeight="35" HorizontalContentAlignment="Center" HorizontalAlignment="Center">
                                                <AppBarButton x:Name="ManageTags" x:Uid="ManageTags" AllowFocusOnInteraction="True" Click="ManageTags_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE8EC;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                            </CommandBar>
                                        </Grid>
                                    </Flyout>
                                </FlyoutBase.AttachedFlyout>
                            </AppBarButton>
                            <AppBarButton x:Uid="SortBtn" x:Name="Sort" Click="Filter_Click" LabelPosition="Collapsed" HorizontalAlignment="Right" Margin="0,0,0,0" Height="40" Width="40" FontSize="10">
                                <AppBarButton.Icon>
                                    <SymbolIcon Symbol="Sort" Margin="0,-3,0,3"/>
                                </AppBarButton.Icon>
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout>
                                        <ToggleMenuFlyoutItem x:Uid="SortByDef" IsChecked="{x:Bind sortOptions.sortDefault, Mode=TwoWay}"/>
                                        <ToggleMenuFlyoutItem x:Uid="SortByName" IsChecked="{x:Bind sortOptions.sortName, Mode=TwoWay}"/>
                                        <ToggleMenuFlyoutItem x:Uid="SortByTags" IsChecked="{x:Bind sortOptions.sortTag, Mode=TwoWay}"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </AppBarButton>
                            
                        </CommandBar>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="CreateNoteButton" Height="40" Width="40" FontSize="10" AllowFocusOnInteraction="True" HorizontalAlignment="Center" Grid.Column="0" x:Name="CreateButton" Click="CreateButton_Click">
                            <AppBarButton.Icon>
                                <SymbolIcon Symbol="Add" Margin="0,-3,0,3" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="RenameNoteButton" Height="40" Width="40" FontSize="10" AllowFocusOnInteraction="True" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" Grid.Column="1" x:Name="RenameButton" Click="RenameButton_Click">
                            <AppBarButton.Icon>
                                <SymbolIcon Symbol="Rename" Margin="0,-3,0,3" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="DeleteNoteButton" Height="40" Width="40" FontSize="10" AllowFocusOnInteraction="True" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" Grid.Column="2" x:Name="DeleteButton" Click="DeleteButton_Click">
                            <AppBarButton.Icon>
                                <SymbolIcon Symbol="Delete" Margin="0,-3,0,3" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton Margin="0" Height="40" Width="40" FontSize="10" x:Name="MoreBtn" x:Uid="MoreButton" IsEnabled="{x:Bind NoteList.SelectedItem, Mode=OneWay, Converter={StaticResource NullBooleanConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" LabelPosition="Collapsed" Click="MoreBtn_Click">
                            <AppBarButton.Icon>
                                <SymbolIcon Symbol="More" Margin="0,-3,0,3" />
                            </AppBarButton.Icon>
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:Uid="ChangeEmojiBtn" Loaded="MenuFlyoutItem_Loaded">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE899;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSubItem x:Uid="AssignTagsBtn" Loaded="MenuFlyoutSubItem_Loaded">
                                        <MenuFlyoutSubItem.Icon>
                                            <FontIcon Glyph="&#xE8EC;" />
                                        </MenuFlyoutSubItem.Icon>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutItem Loaded="PinUnPin_Loaded" Click="PinUnPin_Click">
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </AppBarButton>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="235">
                    <StackPanel>
                        <AutoSuggestBox
                            x:Name="SearchBox"
                            x:Uid="SearchBox"
                            QueryIcon="Find"
                            Margin="2,0,2,0"
                            Height="40"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            QuerySubmitted="SearchBox_QuerySubmitted"/>
                        <ListView
                            x:Name="SearchResults"
                            SelectionMode="None"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:NoteMetadata">
                                    <Button Tag="{Binding}" Click="SearchResult_Click" BorderThickness="0" Margin="-15,0,-10,0" Background="{Binding Tags, Converter={StaticResource TagGradientConverter}, Mode=OneWay}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="35" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="25"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon Glyph="{x:Bind Emoji, Mode=OneWay}" FontFamily="Segoe UI Emoji" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" FontSize="11" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>
            <Frame x:Name="contentFrame" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="contentFrame_Loaded"/>
            <controls:TeachingTip x:Name="ReviewTip"
                x:Uid="ReviewTip"
                Grid.Column="1"
	            PreferredPlacement="BottomRight"
	            PlacementMargin="10"
                ActionButtonStyle="{ThemeResource AccentButtonStyle}">
            </controls:TeachingTip>
        </Grid>
    </Grid>
</Page>
