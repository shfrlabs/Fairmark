<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:customcontrols="using:Fairmark.Controls">

    <Style TargetType="customcontrols:FileEditorBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customcontrols:FileEditorBox">
                    <TextBox
                        x:Name="MarkEditor"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="0"
                        BorderThickness="0"
                        DataContext="{StaticResource Settings}"
                        FontFamily="{Binding EditorFontFamily}"
                        FontSize="{Binding EditorFontSize}">
                        <TextBox.Resources>
                            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                        </TextBox.Resources>
                    </TextBox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="customcontrols:GlamButton">
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customcontrols:GlamButton">
                    <Grid>
                        <!-- Glow Effect -->
                        <win2d:CanvasControl 
                        x:Name="GlowCanvas"
                        IsHitTestVisible="False"
                        Margin="-10"/>

                        <Grid x:Name="ButtonRoot" 
                          RenderTransformOrigin="0.5,0.5"
                          CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale"/>
                            </Grid.RenderTransform>

                            <Border x:Name="BaseBackground"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Opacity="0.9"/>

                            <Border x:Name="GradientOverlay"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Opacity="0.9">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="-0.5,0" EndPoint="1.5,1">
                                        <GradientStop Color="#d28aff" Offset="0"/>
                                        <GradientStop Color="#6ee1ff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBlock x:Name="ContentText"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontSize="18"
                                   Padding="{TemplateBinding Padding}"
                                   Foreground="{TemplateBinding Foreground}">
                            <Run>Upgrade for </Run>
                            <Run x:Name="PrevPriceRun" TextDecorations="Strikethrough"/>
                            <Run x:Name="PriceRun" FontWeight="Bold"/>
                            </TextBlock>
                        </Grid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BaseBackground"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.9"
                                                     Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="GradientOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.8"
                                                     Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="1.0"
                                                     Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="1.0"
                                                     Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BaseBackground"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="1.0"
                                                     Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="GradientOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.9"
                                                     Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="1.05"
                                                     Duration="0:0:0.1"
                                                     EnableDependentAnimation="True">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="1.05"
                                                     Duration="0:0:0.1"
                                                     EnableDependentAnimation="True">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BaseBackground"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.8"
                                                     Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="GradientOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.5"
                                                     Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="0.95"
                                                     Duration="0:0:0.1"
                                                     EnableDependentAnimation="True">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="0.95"
                                                     Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
