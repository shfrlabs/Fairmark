<Page
    x:Class="Fairmark.FileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:labstoolkit="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    xmlns:toolkitrns="using:CommunityToolkit.WinUI.Controls.MarkdownTextBlockRns"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:Fairmark.Models"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    xmlns:customcontrols="using:Fairmark.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush
            x:Key="NoteEditorBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.3"
        />
        <SolidColorBrush
            x:Key="NotePreviewBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.8"
        />
        <SolidColorBrush
            x:Key="NoteEditorBorder"
            Color="Transparent"
            Opacity=".2"
        />
    </Page.Resources>
    <Grid
        Margin="5"
        CornerRadius="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid
            Background="{ThemeResource NotePreviewBackground}"
            CornerRadius="4,0,0,4"
            Grid.Column="0">
            <ScrollViewer
            HorizontalAlignment="Stretch"
            x:Name="previewsv"
            VerticalAlignment="Stretch">
                <labstoolkit:MarkdownTextBlock
                IsTextScaleFactorEnabled="False"
                DisableHtml="False"
                UseSoftlineBreakAsHardlineBreak="True"
                UseTaskLists="False"
                Padding="10, 8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                x:Name="MarkBlock"
                BorderThickness="0"
                DataContext="{StaticResource Settings}"
                FontSize="{Binding PreviewFontSize, Mode=OneWay}"
                FontFamily="{Binding PreviewFontFamily, Mode=OneWay}"
                Text="{x:Bind MarkEditor.Text, Mode=OneWay}">
                </labstoolkit:MarkdownTextBlock>
            </ScrollViewer>
        </Grid>
        <Grid
            Grid.Column="1"
            BorderBrush="{ThemeResource NoteEditorBorder}"
            BorderThickness="1,0,0,0"
            CornerRadius="0,4,4,0"
            Background="{ThemeResource NoteEditorBackground}">
            <customcontrols:FileEditorBox x:Name="MarkEditor" Grid.Row="0" NoteID="{x:Bind noteId}"/>
        </Grid>
        <toolkit:GridSplitter
           Grid.Column="0"
           Opacity="0.5"
           IsThumbVisible="False"
           Margin="0,0,-4.2,0"
           VerticalAlignment="Stretch" HorizontalAlignment="Right">
        </toolkit:GridSplitter>
        <CommandBar Margin="-7,0,0,0" Grid.Row="1" Grid.ColumnSpan="2" IsDynamicOverflowEnabled="True" HorizontalAlignment="Left" MinWidth="0">
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Bold" Width="50" Icon="Bold" Command="{x:Bind MarkEditor.BoldCommand}" />
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Italic" Width="50" Icon="Italic" Command="{x:Bind MarkEditor.ItalicCommand}" />
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Strikethrough" Width="50" Command="{x:Bind MarkEditor.StrikethroughCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xEDE0;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Code" Width="50" Command="{x:Bind MarkEditor.CodeCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE943;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Bulleted list" Width="50" Command="{x:Bind MarkEditor.BulletCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE8FD;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Horizontal line" Width="50" Command="{x:Bind MarkEditor.HorizontalLineCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE738;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <!--<AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Add link" Width="50">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE71B;" />
                </AppBarButton.Icon>
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Width="250" Margin="-10">
                            <TextBox x:Name="LinkUrl" AllowFocusOnInteraction="True" PlaceholderText="Link address" />
                            <TextBox x:Name="LinkText" AllowFocusOnInteraction="True" PlaceholderText="Displayed text" Margin="0,10,0,10"/>
                            <Button Content="Insert link" Command="{x:Bind MarkEditor.AddLinkCommand}" HorizontalAlignment="Stretch">
                                <Button.CommandParameter>
                                    <models:Link Name="{x:Bind LinkText.Text}" Url="{x:Bind LinkUrl.Text}"/>
                                </Button.CommandParameter>
                            </Button>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>-->
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Heading 1" Width="50" Command="{x:Bind MarkEditor.Heading1Command}">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H1"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Label="Heading 2" Width="50" Command="{x:Bind MarkEditor.Heading2Command}">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H2"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" Content="Heading 3" Label="Heading 3" Width="50" Command="{x:Bind MarkEditor.Heading3Command}">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H3"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </CommandBar>
    </Grid>
</Page>
