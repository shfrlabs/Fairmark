<Page
    x:Class="Fairmark.FileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:oldtoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:Fairmark.Models"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:MarkdownNewLineConverter x:Name="MDNewLineConverter"/>
        <SolidColorBrush
            x:Key="NoteEditorBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.3"
        />
        <SolidColorBrush
            x:Key="NotePreviewBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.8"
        />
        <SolidColorBrush
            x:Key="NoteEditorBorder"
            Color="Transparent"
            Opacity=".2"
        />
    </Page.Resources>
    <Grid
        Margin="5"
        CornerRadius="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Background="{ThemeResource NotePreviewBackground}"
            CornerRadius="4,0,0,4"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            x:Name="previewsv"
            VerticalAlignment="Stretch">
            <oldtoolkit:MarkdownTextBlock
                Background="Transparent"
                Padding="10, 8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                x:Name="MarkBlock"
                BorderThickness="0"
                DataContext="{StaticResource Settings}"
                FontSize="{Binding PreviewFontSize, Mode=OneWay}"
                FontFamily="{Binding PreviewFontFamily, Mode=OneWay}"
                Text="{x:Bind MarkEditor.Text, Mode=OneWay, Converter={StaticResource MDNewLineConverter}}"/>
        </ScrollViewer>
        <Grid
            Grid.Column="1"
            BorderBrush="{ThemeResource NoteEditorBorder}"
            BorderThickness="1,0,0,0"
            CornerRadius="0,4,4,0"
            Background="{ThemeResource NoteEditorBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <CommandBar Grid.Row="1" Height="70" HorizontalAlignment="Left" OverflowButtonVisibility="Collapsed">
                <AppBarToggleButton Label="Zen" Width="50" Click="AppBarToggleButton_Click" IsChecked="{x:Bind currentView.IsFullScreenMode, Mode=OneWay}">
                    <FontIcon Glyph="&#xE708;" />
                </AppBarToggleButton>
            </CommandBar>
            <TextBox
                Padding="10,8"
                AcceptsReturn="True"
                ScrollViewer.VerticalScrollMode="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                x:Name="MarkEditor"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                DataContext="{StaticResource Settings}"
                FontFamily="{Binding EditorFontFamily}"
                FontSize="{Binding EditorFontSize}"
                BorderThickness="0"
                TextChanged="MarkEditor_TextChanged">
                <TextBox.Resources>
                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                </TextBox.Resources>
            </TextBox>
        </Grid>
        <toolkit:GridSplitter
           Grid.Column="0"
           Opacity="0.5"
           IsThumbVisible="False"
           Margin="0,0,-4.2,0"
           VerticalAlignment="Stretch" HorizontalAlignment="Right">
        </toolkit:GridSplitter>
    </Grid>
</Page>
