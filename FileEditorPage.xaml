<Page
    x:Class="Fairmark.FileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:labstoolkit="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    xmlns:toolkitrns="using:CommunityToolkit.WinUI.Controls.MarkdownTextBlockRns"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:Fairmark.Models"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    xmlns:customcontrols="using:Fairmark.Controls"
    xmlns:storage="using:Windows.Storage"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:NameToImageSourceConverter x:Key="NameToImageSourceConverter"/>
        <converters:NullBooleanConverter x:Key="NullBoolConverter"/>
        <SolidColorBrush
            x:Key="NoteEditorBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.3"
        />
        <SolidColorBrush
            x:Key="NotePreviewBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.8"
        />
        <SolidColorBrush
            x:Key="NoteEditorBorder"
            Color="Transparent"
            Opacity=".2"
        />
    </Page.Resources>
    <Grid
        Margin="5"
        CornerRadius="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid
            Background="{ThemeResource NotePreviewBackground}"
            CornerRadius="4,0,0,4"
            Grid.Column="0">
            <ScrollViewer
            HorizontalAlignment="Stretch"
            x:Name="previewsv"
            VerticalAlignment="Stretch">
                <labstoolkit:MarkdownTextBlock
                IsTextScaleFactorEnabled="False"
                DisableHtml="False"
                UseSoftlineBreakAsHardlineBreak="True"
                UseTaskLists="False"
                Padding="10, 8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                x:Name="MarkBlock"
                BorderThickness="0"
                DataContext="{StaticResource Settings}"
                FontSize="{Binding PreviewFontSize, Mode=OneWay}"
                FontFamily="{Binding PreviewFontFamily, Mode=OneWay}"
                Text="{x:Bind MarkEditor.Text, Mode=OneWay}">
                </labstoolkit:MarkdownTextBlock>
            </ScrollViewer>
        </Grid>
        <Grid
            Grid.Column="1"
            BorderBrush="{ThemeResource NoteEditorBorder}"
            BorderThickness="1,0,0,0"
            CornerRadius="0,4,4,0"
            Background="{ThemeResource NoteEditorBackground}">
            <customcontrols:FileEditorBox x:Name="MarkEditor" Grid.Row="0" NoteID="{x:Bind noteId}"/>
        </Grid>
        <toolkit:GridSplitter
           Grid.Column="0"
           Opacity="0.5"
           IsThumbVisible="False"
           Margin="0,0,-4.2,0"
           VerticalAlignment="Stretch" HorizontalAlignment="Right">
        </toolkit:GridSplitter>
        <ScrollViewer Margin="-2,0,0,0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" MinWidth="0" VerticalScrollMode="Disabled" HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="UndoButton" Width="42" Icon="Undo" Command="{x:Bind MarkEditor.UndoCommand}">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Z" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="RedoButton" Width="42" Icon="Redo" Command="{x:Bind MarkEditor.RedoCommand}">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Y" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="CutButton" Width="42" Icon="Cut" Command="{x:Bind MarkEditor.CutCommand}">
                    <!--<AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="X" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>-->
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="CupyButton" Width="42" Icon="Copy" Command="{x:Bind MarkEditor.CopyCommand}">
                    <!--<AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="C" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>-->
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="PasteButton" Width="42" Icon="Paste" Command="{x:Bind MarkEditor.PasteCommand}">
                    <!--<AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="V" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>-->
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="BoldButton" Width="42" Icon="Bold" Command="{x:Bind MarkEditor.BoldCommand}">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="B" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="ItalicButton" Width="42" Icon="Italic" Command="{x:Bind MarkEditor.ItalicCommand}">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="I" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="StrikeButton" Width="42" Command="{x:Bind MarkEditor.StrikethroughCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xEDE0;" />
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="CodeButton" Width="42" Command="{x:Bind MarkEditor.CodeCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE943;" />
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="M" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="QuoteButton" Width="42" Command="{x:Bind MarkEditor.QuoteCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE9B1;" />
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Q" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="BulletButton" Width="42" Command="{x:Bind MarkEditor.BulletCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8FD;" />
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="U" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="LineButton" Width="42" Command="{x:Bind MarkEditor.HorizontalLineCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE738;" />
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="L" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="LinkButton" Width="42" Click="AppBarButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE71B;"/>
                    </AppBarButton.Icon>
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <StackPanel Width="250" Margin="-10">
                                <TextBox x:Name="LinkText" AllowFocusOnInteraction="True" x:Uid="LinkDisplay" />
                                <TextBox x:Name="LinkUrl" AllowFocusOnInteraction="True" x:Uid="LinkAddress" Margin="0,10,0,10"/>
                                <Button Content="Insert link" HorizontalAlignment="Stretch" x:Uid="InsertLinkButton" Click="InsertLink_Click"/>
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="ExpandButton" Width="42" Click="AppBarButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8C4;"/>
                    </AppBarButton.Icon>
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <StackPanel Width="250" Margin="-10">
                                <TextBox x:Name="SummaryText" AllowFocusOnInteraction="True" x:Uid="SummaryText" />
                                <TextBox x:Name="DetailsText" AllowFocusOnInteraction="True" x:Uid="DetailsText" Margin="0,10,0,10"/>
                                <Button Content="Insert element" HorizontalAlignment="Stretch" x:Uid="InsertDetailsButton" Click="Details_Click"/>
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="ImageButton" Width="42" Click="AppBarButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8B9;"/>
                    </AppBarButton.Icon>
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <StackPanel Width="250" Margin="-10">
                                <HyperlinkButton HorizontalAlignment="Stretch" x:Uid="ImportImages" Click="ImportImage_Click" Margin="0,0,0,10"/>
                                <ScrollViewer Height="300" HorizontalAlignment="Stretch">
                                    <ListView HorizontalAlignment="Stretch" x:Name="Images" Loaded="Images_Loaded">
                                        <ListView.Resources>
                                            <SolidColorBrush Color="Transparent" x:Key="ListViewItemPlaceholderBackground"/>
                                        </ListView.Resources>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="storage:StorageFile">
                                                <Grid HorizontalAlignment="Stretch" Height="60" Margin="-12,2,-8,2" CornerRadius="5" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="55"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="{x:Bind Name, Converter={StaticResource NameToImageSourceConverter}}" Stretch="UniformToFill" Width="60" Height="60"/>
                                                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                                        <TextBlock Text="{x:Bind Name}" TextTrimming="CharacterEllipsis" FontSize="14" Margin="15,0,5,0"/>
                                                        <TextBlock Text="{x:Bind DisplayType}" FontSize="12" Opacity="0.7" Margin="15,0,5,0"/>
                                                    </StackPanel>
                                                    <AppBarButton Icon="Delete" x:Uid="DeleteImage" x:Name="DeleteImage" LabelPosition="Collapsed" Grid.Column="2" Width="45" VerticalAlignment="Center" HorizontalAlignment="Center" Tag="{x:Bind}" Click="DeleteImage_Click"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>
                                <Button Margin="0,10,0,0" IsEnabled="{x:Bind Images.SelectedValue, Converter={StaticResource NullBoolConverter}, Mode=OneWay}" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" x:Uid="InsertDetailsButton" x:Name="InsertImage" Click="InsertImage_Click"/>
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="Head1Button" Width="42" Command="{x:Bind MarkEditor.Heading1Command}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H1"/>
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Number1" Modifiers="Control"/>
                        <KeyboardAccelerator Key="NumberPad1" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="Head2Button" Width="42" Command="{x:Bind MarkEditor.Heading2Command}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H2"/>
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Number2" Modifiers="Control"/>
                        <KeyboardAccelerator Key="NumberPad2" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton LabelPosition="Collapsed" Margin="0,0,5,0" x:Uid="Head3Button" Width="42" Command="{x:Bind MarkEditor.Heading3Command}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe UI Variable Display" Glyph="H3"/>
                    </AppBarButton.Icon>
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Number3" Modifiers="Control"/>
                        <KeyboardAccelerator Key="NumberPad3" Modifiers="Control"/>
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarElementContainer>
                    <Grid VerticalAlignment="Stretch" Opacity="0.7" Margin="5,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="11"><Run x:Uid="WordCount"/> <Run Text="{x:Bind MarkEditor.WordCount, Mode=OneWay}"></Run></TextBlock>
                        <TextBlock FontSize="11" Grid.Row="1"><Run x:Uid="CharCount"/> <Run Text="{x:Bind MarkEditor.CharacterCount, Mode=OneWay}"></Run></TextBlock>
                    </Grid>
                </AppBarElementContainer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
