<Page
    x:Class="Fairmark.FileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:oldtoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:Fairmark.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:MarkdownNewLineConverter x:Name="MDNewLineConverter"/>
        <SolidColorBrush
            x:Key="NoteEditorBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.3"
        />
        <SolidColorBrush
            x:Key="NotePreviewBackground"
            Color="{ThemeResource LayerFillColorDefault}"
            Opacity="0.8"
        />
        <SolidColorBrush
            x:Key="NoteEditorBorder"
            Color="Transparent"
            Opacity=".2"
        />
    </Page.Resources>
    <Grid
        Margin="5"
        CornerRadius="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Background="{ThemeResource NotePreviewBackground}"
            CornerRadius="4,0,0,4"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <oldtoolkit:MarkdownTextBlock
                Background="Transparent"
                Padding="10, 8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                x:Name="MarkBlock"
                BorderThickness="0"
                Text="{x:Bind MarkEditor.Text, Mode=OneWay, Converter={StaticResource MDNewLineConverter}}"/>
        </ScrollViewer>
        <Grid
            Grid.Column="1"
            BorderBrush="{ThemeResource NoteEditorBorder}"
            BorderThickness="1,0,0,0"
            CornerRadius="0,4,4,0"
            Background="{ThemeResource NoteEditorBackground}">
            <TextBox
                Padding="10,8"
                AcceptsReturn="True"
                ScrollViewer.VerticalScrollMode="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                x:Name="MarkEditor"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                FontFamily="Consolas" 
                BorderThickness="0"
                TextChanged="MarkEditor_TextChanged">
                <TextBox.Resources>
                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBackground" Color="Transparent"/>
                    <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                </TextBox.Resources>
            </TextBox>
        </Grid>
        <toolkit:GridSplitter
           Grid.Column="1"
           Margin="0,0,-10,0"
           VerticalAlignment="Center" HorizontalAlignment="Right">
        </toolkit:GridSplitter>
    </Grid>
</Page>
