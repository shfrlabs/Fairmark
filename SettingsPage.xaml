<Page
    x:Class="Fairmark.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fairmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:helpers="using:Fairmark.Helpers"
    xmlns:converters="using:Fairmark.Converters"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.Text"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:FontFamilyToNameConverter x:Name="FontFamilyToName" />
    </Page.Resources>
    <Grid x:Name="RootGrid" Margin="0,-50,0,0">
        <Grid.Background>
            <AcrylicBrush BackgroundSource="HostBackdrop" TintColor="{StaticResource DialogBGColor}" FallbackColor="{ThemeResource DialogBGColor}"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="170"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Settings" FontSize="12" Margin="15,2,0,0" FontFamily="Segoe UI Variable Display"/>
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical" DataContext="{StaticResource Settings}" Margin="18,0,18,0">
                <toolkit:SettingsCard Header="App theme" Description="Select what theme the app applies.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE790;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox
                        ItemsSource="{Binding AvailableThemes}"
                        SelectedItem="{Binding Theme, Mode=TwoWay}"
                        PlaceholderText="Select theme" HorizontalAlignment="Right">
                    </ComboBox>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Editor font family" Description="Select what font is used by the note editor.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8D2;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox
                        ItemsSource="{x:Bind win2d:CanvasTextFormat.GetSystemFontFamilies()}"
                        SelectedItem="{Binding EditorFontFamily, Mode=TwoWay, Converter={StaticResource FontFamilyToName}}"
                        PlaceholderText="Select font" HorizontalAlignment="Right">
                    </ComboBox>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Editor font size" Description="Select the font size used by the note editor.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8E9;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <Slider StepFrequency="1" Minimum="10" Maximum="60" HorizontalAlignment="Right" Value="{Binding EditorFontSize, Mode=TwoWay}"/>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Preview font family" Description="Select what font is used by the Markdown note preview.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8D2;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox
                        ItemsSource="{x:Bind win2d:CanvasTextFormat.GetSystemFontFamilies()}"
                        SelectedItem="{Binding PreviewFontFamily, Mode=TwoWay, Converter={StaticResource FontFamilyToName}}"
                        PlaceholderText="Select font" HorizontalAlignment="Right">
                    </ComboBox>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Preview font size" Description="Select the font size used by the Markdown note preview.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8E9;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <Slider StepFrequency="1" Minimum="10" Maximum="60" HorizontalAlignment="Right" Value="{Binding PreviewFontSize, Mode=TwoWay}"/>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Hide from screenshots" Description="Select whether the app should hide its content from screenshots, including Windows Recall's AI timeline.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE733;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        IsOn="{Binding HideFromRecall, Mode=TwoWay}" HorizontalAlignment="Right">
                    </ToggleSwitch>
                </toolkit:SettingsCard>
                <toolkit:SettingsCard Header="Authentication" Description="Select whether the app should require biometrics before opening.">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE72E;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        IsOn="{Binding AuthenticationEnabled, Mode=TwoWay}" Loaded="ToggleSwitch_Loaded" HorizontalAlignment="Right">
                    </ToggleSwitch>
                </toolkit:SettingsCard>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
